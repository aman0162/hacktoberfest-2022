class Solution {
public:
    int maxArea(vector<int>& arr) {
        int ans=INT_MIN;
        int no=arr.size();  //no of elements in vector 
		int i=0,j=no-1;    

		while(i<j)
		{
			ans=max((j-i)*min(arr[i],arr[j]),ans);
			if(arr[j]<arr[i])
			{
				j--;
			}
			else
				i++;
		}
		
        return ans;
    }
};

// Aman Agrahari (21 years old)
T.C. O(n)
S.C. O(n) 
